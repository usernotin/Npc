--[[ REX CHAT BOT | DELTA SAFE | ULTRA OBFUSCATED ]]--

------------------ EDITABLE ------------------
local OWNER_NAME = "ACU44A"

local AccessUsers = {
	[""] = true,
	[""] = true,
	["FriendName2"] = true,
	[""] = true
}
------------------------------------------------

do
	local _A,_B,_C,_D =
	game:GetService("Players"),
	game:GetService("TextChatService"),
	game:GetService("ReplicatedStorage"),
	game:GetService("RunService")

	local _P = _A.LocalPlayer
	if not _P or not AccessUsers[_P.Name] then return end

	-- noise
	local function _j()
		local x=0
		for i=1,math.random(20,40) do
			x=x+math.cos(i)
		end
		return x
	end
	_j();_j()

	local _E={"üòÅüíû","üòÇüî•","‚úåüèªüòë","üòúüíï"}
	local _W=string.split(
		"",
		" "
	)

	local _run=false
	local _lock=false
	local _name=""
	local _idx=1
	local _thr=nil

	local function _s(m)
		pcall(function()
			if _B.ChatVersion==Enum.ChatVersion.TextChatService then
				_B.TextChannels.RBXGeneral:SendAsync(m)
			else
				_C.DefaultChatSystemChatEvents.SayMessageRequest:FireServer(m,"All")
			end
		end)
	end

	local function _m()
		local w=_W[_idx] or "DATA"
		local e=_E[math.random(#_E)]
		_idx+=1
		if _idx>#_W then _idx=1 end
		return "________________________________________________________________________________________________________________________________________________________ "
			.._name.." TMKX MAI "..w.." "..e
	end

	local function _loop()
		if _thr or _lock or _name=="" then return end
		_thr=task.spawn(function()
			while _run and not _lock do
				_s(_m())
				task.wait(2+math.random())
			end
			_thr=nil
		end)
	end

	_B.OnIncomingMessage=function(m)
		if not m.TextSource then return end
		local p=_A:GetPlayerByUserId(m.TextSource.UserId)
		if not p or p.Name~=OWNER_NAME then return end
		local t=string.lower(m.Text)
		if t=="lock bot" then
			_lock=true;_run=false;_s("BOT LOCKED üîê")
		elseif t=="unlock bot" then
			_lock=false;_s("BOT UNLOCKED üîì")
		end
	end

	task.spawn(function()
		local g=Instance.new("ScreenGui",_P.PlayerGui)
		g.Name="RBX_"..math.random(100000,999999)

		local f=Instance.new("Frame",g)
		f.Size=UDim2.new(0,220,0,140)
		f.Position=UDim2.new(0,20,0.5,-70)
		f.BackgroundColor3=Color3.fromRGB(20,20,20)
		f.Active=true;f.Draggable=true
		Instance.new("UICorner",f)

		local b=Instance.new("TextBox",f)
		b.Size=UDim2.new(1,-20,0,30)
		b.Position=UDim2.new(0,10,0,40)
		b.PlaceholderText="Enter Hater Name"
		b.BackgroundColor3=Color3.fromRGB(35,35,35)
		b.TextColor3=Color3.new(1,1,1)
		Instance.new("UICorner",b)

		b.FocusLost:Connect(function()
			_name=b.Text;_idx=1
		end)

		local s=Instance.new("TextButton",f)
		s.Size=UDim2.new(0.45,0,0,30)
		s.Position=UDim2.new(0.05,0,0,80)
		s.Text="START"
		s.MouseButton1Click:Connect(function()
			if not _lock then _run=true;_loop() end
		end)

		local x=Instance.new("TextButton",f)
		x.Size=UDim2.new(0.45,0,0,30)
		x.Position=UDim2.new(0.5,0,0,80)
		x.Text="STOP"
		x.MouseButton1Click:Connect(function()
			_run=false
		end)
	end)
end

